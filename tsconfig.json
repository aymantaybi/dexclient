{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6", 
    "module": "commonjs",
    "strict": true, 
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
      "tests",
      "dist",
      "node_modules",
      "example.ts"
  ]
}